<mvc:View controllerName="demo.app.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <List
                            headerText="Employees"
                            items="{/Employees}">
                            <StandardListItem
                                title="{EmployeeID}"
                                description="{FirstName} {LastName}"/>                        
                        </List>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
